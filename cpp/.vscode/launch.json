{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb-cygwin) Launch",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "c:/tools/cygwin/bin/gdb.exe",
            "program": "${workspaceRoot}/a.exe",
            "args": [
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "preLaunchTask": "make",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}